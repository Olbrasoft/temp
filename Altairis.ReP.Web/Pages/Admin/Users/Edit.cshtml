@page "{userId:int:min(1)}"
@model Altairis.ReP.Web.Pages.Admin.Users.EditModel
@{ this.ViewBag.Title = UI.Admin_Users_Edit_Title; }
<form method="post">
    <p>
        <label asp-for="Input.UserName"></label>:<br />
        <input asp-for="Input.UserName" />
    </p>
        <p>
        <label asp-for="Input.DisplayName"></label>:<br />
        <input asp-for="Input.DisplayName" />
    </p>
    <p>
        <label asp-for="Input.Email"></label>:<br />
        <input asp-for="Input.Email" /><br />
        <checkbox-list asp-for="Input.Language" asp-items="Model.AllLanguages" control-type="RadioButton" class="checkbox-list" />
    </p>
    <p>
        <label asp-for="Input.PhoneNumber"></label>:<br />
        <input asp-for="Input.PhoneNumber" />
    </p>
    <p visible="@this.OptionsAccessor.Value.Features.UseMemberDirectory"><input asp-for="Input.ShowInMemberDirectory" /> <label asp-for="Input.ShowInMemberDirectory"></label></p>
    <p><input asp-for="Input.IsMaster" /> <label asp-for="Input.IsMaster"></label></p>
    <p><input asp-for="Input.IsAdministrator" /> <label asp-for="Input.IsAdministrator"></label></p>
    <p><input asp-for="Input.UserEnabled" /> <label asp-for="Input.UserEnabled"></label></p>
    <footer>
        <div asp-validation-summary="All"></div>
        <input type="submit" value="@UI._Submit" />
        <a asp-page="Index" class="button secondary">@UI._Cancel</a>
        <input type="submit" class="tertiary" value="@UI._Delete" asp-page-handler="delete" confirm-message="@UI.Admin_Users_Edit_DeleteConfirm" />
    </footer>
</form>