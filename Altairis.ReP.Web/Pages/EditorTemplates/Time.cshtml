@{
    var value = string.Empty;
    if (ViewData.Model != null) {
        var ts = (TimeSpan)ViewData.Model;
        value = ts.ToString(@"hh\:mm");
    }
    var htmlAttributes = new {
        type = "time",
        @class = "textbox",
        placeholder = ViewData.ModelMetadata.Placeholder,
    };
}
@Html.TextBox("", value, htmlAttributes)